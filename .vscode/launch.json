{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Day",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/src/index.js",
      "args": ["${relativeFile}"]
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
      "args": ["related", "${relativeFile}"]
    }
  ]
}
