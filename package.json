  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.47.2",
    "@vitest/eslint-plugin": "^1.1.27",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "playwright": "^1.49.1",
    "prettier": "^3.4.2",
    "typescript": "^5.6.2",
