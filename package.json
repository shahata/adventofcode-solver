{
  "name": "adventofcode-solver",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shahata/adventofcode-solver.git"
  },
  "scripts": {
    "start": "node src/index.js",
    "deno": "deno run --allow-net --allow-read src/server/local.js",
    "serve": "http-server -p 443 -S -o -c-1 -C static/http-cert.pem -K static/http-key.pem",
    "test": "if [ -z \"$CI\" ]; then vitest run --changed $*; else vitest run $*; fi",
    "lint": "eslint src",
    "prepare": "husky"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.5",
    "@graph-algorithm/minimum-cut": "^2.0.0",
    "@shahata/inquirer-timeout-confirm-prompt": "^1.0.1",
    "chart.js": "^4.5.1",
    "combinatorial-generators": "^1.1.2",
    "es-module-shims": "^2.8.0",
    "node-forge": "^1.3.3",
    "progress": "^2.0.3",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.58.2",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  },
  "wallaby": {
    "smartStart": [
      {
        "startMode": "open"
      }
    ]
  }
}