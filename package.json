{
  "name": "adventofcode-solver",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shahata/adventofcode-solver.git"
  },
  "scripts": {
    "start": "node src/index.js",
    "serve": "open https://127.0.0.1/ && http-server -p 443 -P https://127.0.0.1/ -S",
    "test": "f(){ if [ -z \"$CI\" ]; then jest --onlyChanged $*; else jest $*; fi }; NODE_OPTIONS=--experimental-vm-modules f",
    "lint": "eslint src && tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@datastructures-js/priority-queue": "^6.3.0",
    "@shahata/inquirer-timeout-confirm-prompt": "^0.1.1",
    "chart.js": "^4.4.0",
    "combinatorial-generators": "^1.1.2",
    "es-module-shims": "^1.8.2",
    "inquirer": "^9.2.12",
    "node-forge": "^1.3.1",
    "progress": "^2.0.3",
    "z3-solver": "^4.12.4"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "playwright": "^1.40.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2024": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "eslintIgnore": [
    "src/template/*.js"
  ],
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/template"
    ],
    "forceExit": true
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  },
  "wallaby": {
    "autoDetect": true,
    "runSelectedTestsOnly": true,
    "env": {
      "params": {
        "env": "NODE_OPTIONS=--experimental-vm-modules"
      }
    }
  }
}
