{
  "name": "adventofcode-solver",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shahata/adventofcode-solver.git"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "f(){ if [ -z \"$CI\" ]; then jest --onlyChanged $*; else jest $*; fi ;};f",
    "lint": "eslint src/**/*.js"
  },
  "dependencies": {
    "inquirer": "^4.0.1",
    "js-combinatorics": "^0.5.0",
    "node-fetch": "^1.3.3",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.7.4",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-import-meta": "^1.0.0",
    "describe-heavy": "^1.0.14",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^0.14.3",
    "jest": "^24.9.0",
    "prettier": "^1.19.1"
  },
  "babel": {
    "plugins": [
      "babel-plugin-transform-import-meta",
      "@babel/plugin-transform-modules-commonjs"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es2020": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "jest/no-focused-tests": "error",
      "jest/expect-expect": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "wallaby": {
    "autoDetect": true,
    "runSelectedTestsOnly": true
  }
}
