{
  "name": "adventofcode-solver",
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:shahata/adventofcode-solver.git"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "f(){ if [ -z \"$CI\" ]; then jest --onlyChanged $*; else jest $*; fi }; NODE_OPTIONS=--experimental-vm-modules f",
    "lint": "eslint src && tsc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@shahata/inquirer-timeout-confirm-prompt": "^0.1.1",
    "inquirer": "^8.2.0",
    "js-combinatorics": "^0.6.1",
    "node-fetch": "^3.2.10",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "avoid"
  },
  "wallaby": {
    "autoDetect": true,
    "runSelectedTestsOnly": true,
    "env": {
      "params": {
        "env": "NODE_OPTIONS=--experimental-vm-modules"
      }
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
